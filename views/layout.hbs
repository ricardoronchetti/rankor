<!DOCTYPE html>
<html lang="en">

<head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <meta http-equiv="X-UA-Compatible" content="ie=edge">
      <title>{{appTitle}}</title>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />

      <link rel="stylesheet" href="/stylesheets/style.css" />
      <link href="https://use.fontawesome.com/releases/v5.0.1/css/all.css" rel="stylesheet" />
      <script src="https://kit.fontawesome.com/81c2c05f29.js" crossorigin="anonymous"></script>
      <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
</head>

<body>
      <header>
            <a class="brand" href="/">
                  Rankor
            </a>

            <button class="ranking-btn">
                  <i class="fas fa-trophy"></i>
            </button>

            <a href="/video">
                  <i class="fas fa-video"></i>
            </a>

            <a href="/games">
                  <i class="fas fa-gamepad"></i>
            </a>

            {{#unless connect}}
            <div class="d-none d-md-flex buttons">
                  <button class="btn" data-bs-toggle="modal" data-bs-target="#loginModal">
                        Iniciar sesión
                  </button>

                  <button class="btn reset ml-5" data-bs-toggle="modal" data-bs-target="#signupModal">
                        Crear cuenta
                  </button>
            </div>
            {{/unless}}

            {{#if connect}}
            <a href="/message">
                  <i class="fas fa-comments"></i>
            </a>
            <a href="/user/{{_id}}">
                  <div class="icon-photo">
                        <img src="{{avatar}}">
                  </div>
            </a>

            <form action="/logout" method="POST">
                  <button type="submit" class="icon-button">
                        <img src="/images/button.png">
                  </button>
            </form>
            {{/if}}
      </header>
      <header class="d-flex d-md-none">
            <a class="brand" href="/">
                  Rankor
            </a>
      </header>
      <aside class="ranking">
            <nav>
                  <p>
                        <i class="fas fa-trophy"></i>
                        Ranking
                  </p>
                  {{#each user}}
                  <a href="/user/{{_id}}">
                        <span>
                              <i class="fas fa-medal"></i>
                              1º
                        </span>
                        <div class="icon-photo">
                              <img src="{{avatar}}">
                        </div>
                        <div class="rank-name">
                              {{username}}
                        </div>
                  </a>
                  {{/each}}
            </nav>
      </aside>

      {{{body}}}

      <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                  <div class="modal-content">
                        <button class="back" data-bs-dismiss="modal" aria-label="Close">
                              <i class="fas fa-chevron-left"></i>
                              Volver
                        </button>
                        <div class="modal-body">
                              <h2>Inicia Sesión</h2>
                              <hr>
                              <form action="/login" method="POST">
                                    <div class="form-group">
                                          <input type="text" name="username">
                                          <span class="barra"></span>
                                          <label class="control-label">
                                                Nombre de usuario
                                          </label>
                                    </div>

                                    <div class="form-group">
                                          <input type="password" name="password">
                                          <span class="barra"></span>
                                          <label class="control-label">
                                                Contraseña
                                          </label>
                                    </div>

                                    <div class="d-grid gap-2">
                                          <button class="btn" type="submit">
                                                Entrar
                                          </button>
                                    </div>

                                    {{#if errorMessage}}
                                    <p class="error">{{errorMessage}}</p>
                                    {{/if}}
                              </form>
                        </div>
                  </div>
            </div>
      </div>

      <div class="modal fade" id="signupModal" tabindex="-1" aria-labelledby="signupModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                  <div class="modal-content">
                        <div class="modal-header">
                              <button class="back" data-bs-dismiss="modal" aria-label="Close">
                                    <i class="fas fa-chevron-left"></i>
                                    Volver
                              </button>
                        </div>
                        <div class="modal-body">
                              <h2>Crea una cuenta</h2>
                              <form action="/signup" method="POST">
                                    <div class="form-group">
                                          <input type="text" name="username">
                                          <span class="barra"></span>
                                          <label class="control-label">
                                                Nombre de usuario
                                          </label>
                                    </div>

                                    <div class="form-group">
                                          <input type="password" name="password">
                                          <span class="barra"></span>
                                          <label class="control-label">
                                                Contraseña
                                          </label>
                                    </div>

                                    <div class="d-grid gap-2">
                                          <button class="btn" type="submit">
                                                Crear Cuenta
                                          </button>
                                    </div>
                              </form>
                        </div>
                  </div>
            </div>
      </div>

      <footer class="fixed-bottom d-flex d-md-none">
            <button class="ranking-btn">
                  <i class="fas fa-trophy"></i>
                  <p>Ranking</p>
            </button>

            <a href="/video">
                  <i class="fas fa-video"></i>
                  <p>Videos</p>
            </a>

            <a href="/games">
                  <i class="fas fa-gamepad"></i>
                  <p>Juegos</p>
            </a>

            {{#unless connect}}
            <button data-bs-toggle="modal" data-bs-target="#loginModal">
                  <i class="far fa-user"></i>
                  <p>Entrar</p>
            </button>

            <button data-bs-toggle="modal" data-bs-target="#signupModal">
                  <i class="far fa-address-card"></i>
                  <p>Registrar</p>
            </button>
            {{/unless}}

            {{#if connect}}
            <a href="/message">
                  <i class="fas fa-comments"></i>
                  <p>Mensajes</p>
            </a>
            <a href="/user/{{_id}}">
                  <div class="icon-photo-res">
                        <img src="{{avatar}}">
                  </div>
                  <p>Perfil</p>
            </a>
            <form action="/logout" method="POST">
                  <button type="submit" class="icon-button">
                        <img src="/images/button.png">
                  </button>
            </form>
            {{/if}}

      </footer>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
      <script src="/js/script.js"></script>
</body>

</html>